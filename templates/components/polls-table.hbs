  <div class="container">
    <div class="row center-row">
      <div class="col-lg-12 center-block">
        {{#if message}}
          <div class="alert alert-success text-center" id="success-alert" role="alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{message}}
          </div>
        {{/if}}
        {{#if user.message}}
          <div class="alert alert-success text-center" id="success-alert" role="alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{user.message}}
          </div>
        {{/if}}
			 <div id="subtitle">
         <h1>{{i18n 'My polls'}}</h1>
         </div>
           <div class="col-lg-12 center-block2">
            <table id="dataTable" class="table text-center">
              <thead>
                <tr>
                  <th scope="col">{{i18n 'Title'}}</th>
                  <th scope="col">{{i18n 'Ubication'}}</th>
                  <th scope="col">{{i18n 'Author'}}</th>
                  <th></th>
							  </tr>
              </thead>
              <tbody>
                {{#each polls}}
                  <tr fronty-component="PollRowComponent" key="{{id}}" model="polls[{{@index}}]" id="item-{{id}}"></tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>



