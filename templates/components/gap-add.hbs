<span>
    {{#if poll.addGap}}
        <div class="alert alert-success text-center" id="success-alert" role="alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{poll.addGap}}
        </div>
    {{/if}}
    <div class="container">
        <div class="row center-row">
            <div class="col-lg-12 center-block">
            {{#if errors}}
               <div class="alert alert-danger text-center" id="success-danger" role="alert">
                    {{errors}}
                </div>
            {{/if}}
                <div id="subtitle">
                    {{i18n 'What free days do you have?'}}
                    <input id="poll-link" type="hidden" value="{{poll.selectedPoll.link}}" readonly>
                </div>
                <div class="col-lg-12 center-block2">
                    <table id="dataTable" class="table text-center">
                        <thead>
                            <tr>
                                <th scope="col"><button type="button" class="btn btn-success" id="addRow-button" value="+" >+</button></th>
                                <th scope="col">{{i18n 'Date'}}</th>
                                <th scope="col">{{i18n 'Start'}}</th>
                                <th scope="col">{{i18n 'End'}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td>
                                    <div class="inputDate">
                                        <div class="inputWithIconLogin inputIconBg">
                                            <input type="text" id="date-item-0" class ="date" required>
                                            <i class="fa fa-calendar fa-lg fa-fw" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="inputTime">
                                        <div class="inputWithIconLogin inputIconBg">
                                            <input type="text" id="timeStart-item-0" class="timeStart" required>
                                            <i class="fa fa-clock-o fa-lg fa-fw" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="inputTime">
                                        <div class="inputWithIconLogin inputIconBg">
                                            <input type="text" id="timeEnd-item-0" class="timeEnd" required>
                                            <i class="fa fa-clock-o fa-lg fa-fw" aria-hidden="true"></i>    
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            
                        {{#each emptyGaps}}
                            <tr fronty-component="GapAddRowComponent" key="{{gap}}" model="gaps" id="item-{{gap}}"></tr>
                        {{/each}}

                        </tbody>
                    </table>
                    <button type="submit" id="addGap" class="btn btn-dark" >{{i18n 'Continue'}}</button>
                </div>
            </div>
        </div>
    </div>
</span>